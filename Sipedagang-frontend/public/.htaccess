<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Skip rewriting for the main entry file
  RewriteRule ^index\.html$ - [L]

  # Redirect every non-file/non-folder request back to the SPA entry
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
